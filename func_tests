import numpy as np
import csv
import tkinter as tk
from tkinter import ttk
from tkinter import filedialog as fd


class Main(tk.Frame):
    def __init__(self, parent, *args, **kwargs):
        tk.Frame.__init__(self, parent, *args, **kwargs)
        self.parent = parent
        self.frame = tk. Frame(self.parent)
        Dict = {'State 1': 'This is the first section of text', 'State 2':'This is body #2, there is one more state',
                'State 3': 'The third and final set of textual data'}
        textbody = Dict[kwargs['body']]
        self.text = tk.Label(self.frame, textvariable=textbody)


